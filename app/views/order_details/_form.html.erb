<% Menu.all.each do |menu| %>

  <div id="<%= dom_id menu %>">
    <p>
      <strong>Name:</strong>
      <%= menu.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= menu.price %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= menu.description %>
    </p>

    <p>
      <strong>Menu id:</strong>
      <%= menu.description %>
    </p>
  </div>
<% end %>

