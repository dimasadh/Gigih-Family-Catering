<h2>Order Reports</h2>
<p><%= link_to "Today's Reports", todays_report_url %></p>
<div style="margin: 12px 0px">
  <form action="/report_by_date_range" method="post">
    <label for="start_date">Start Date:</label>
    <input type="date" id="start_date" name="start_date">
    <label for="end_date">End Date:</label>
    <input type="date" id="end_date" name="end_date">
    <input type="submit">
  </form>
</div>

<div style="margin: 12px 0px">
  <form action="/report_by_customer" method="post">
    <label for="customer_id">Select Customer</label>
    <%=select(:customer, :id, Customer.all.collect { |c| [ c.email, c.id ] }, { include_blank: "Select Email" }) %>
    <input type="submit">
  </form>
</div>

<div style="margin: 12px 0px">
  <form action="/report_by_greater_than" method="post">
    <label for="customer_id">Greater than</label>
    <input type="number" id="price" name="price">
    <input type="submit">
  </form>
</div>
